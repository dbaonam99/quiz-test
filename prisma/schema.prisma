generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Question {
  id       String  @id @map("_id") @db.ObjectId
  question String
  hint     String
  answers  Answer[]
}

model Answer {
  id         String   @id @map("_id") @db.ObjectId
  answer     String
  isCorrect  Boolean
  questionId String @db.ObjectId
  question   Question @relation(fields: [questionId], references: [id])
}


